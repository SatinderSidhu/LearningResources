<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="LearningResources.Page2">
	<ContentView.Resources>
		<ResourceDictionary>
			<Color x:Key="txtColor">Blue</Color>
			<Color x:Key="txtBgColor">Red</Color>
		</ResourceDictionary>
	</ContentView.Resources>
	<StackLayout HorizontalOptions="Center" VerticalOptions="Center">
		<Label Text="Registeration Form" TextColor="Blue">
		</Label>
		<Label Text="Enter Your Name" TextColor="{StaticResource txtColor}">
		</Label>
		<Entry x:Name="myName" BackgroundColor="{StaticResource txtBgColor}">
		</Entry>
		<Label Text="Enter Your Age" TextColor="{StaticResource txtColor}">
		</Label>
		<Entry x:Name="myAge" BackgroundColor="{StaticResource txtBgColor}">
		</Entry>
		<Label Text="Enter Your Address" TextColor="{StaticResource txtColor}">
		</Label>
		<Entry x:Name="myAddress" BackgroundColor="{StaticResource txtBgColor}">
		</Entry>
		<Label Text="Enter Your Study" TextColor="{StaticResource txtColor}">
		</Label>
		<Entry x:Name="myStudy" BackgroundColor="{StaticResource txtBgColor}">
		</Entry>
	</StackLayout>
</ContentPage>